<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- handler Mapping -->
	<bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"></bean>
	<bean name="/index.bit" class="com.bit.controller.IndexController"></bean>
	<bean name="/emp/list.bit" class="com.bit.controller.EmpListController"></bean>
	<bean name="/emp/add.bit" class="com.bit.controller.EmpAddController"></bean>
	<bean name="/emp/insert.bit" class="com.bit.controller.EmpInsertController"></bean>
	<bean name="/emp/detail.bit" class="com.bit.controller.EmpDetailController"></bean>
	<bean name="/emp/update.bit" class="com.bit.controller.EmpUpdateController"></bean>
	<bean name="/emp/delete.bit" class="com.bit.controller.EmpDeleteController"></bean>
	
	<!-- view Resolver -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
</beans>
